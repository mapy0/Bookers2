<!--ユーザのプロフィール　あとで変更すると思う--->
<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3><%= @user.name %></h3>
<!--ユーザのプロフィール編集--->
  <% if @user.id == current_user.id %>
  <p><%= link_to "(編集)あとでアイコンになる", edit_user_path(@user) %></p>
  <% end %>
</div>
<!----------------------------------------------->

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <%= attachment_image_tag book, :image %>
  <% end %>
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>
  <p><%= @book.user.name %></p>
</div>
<% end %>
