<!--部分テンプレートファイル-->

<!--バリデーションによるエラーメッセージ-->
<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> errors prohibited this obj from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>


<!--ユーザのプロフィール--->
<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3><%= @user.name %></h3>
<!--ユーザのプロフィール編集--->
  <% if @user.id == current_user.id %>
  <p><%= link_to "(編集)あとでアイコンになる", edit_user_path(@user) %></p>
  <% end %>
</div>


<!--投稿--->
<h1>New Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
